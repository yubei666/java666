<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InformantionActivity">

    <ImageButton
        android:id="@+id/infoBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoNotExist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Results Found"
        android:textSize="36dp"
        android:gravity="center"
        tools:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoNetError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Network Error"
        android:textSize="36dp"
        android:gravity="center"
        tools:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Loading..."
        android:textSize="36dp"
        android:gravity="center"
        tools:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="36dp"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Loading" />

    <TextView
        android:id="@+id/infoPopulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Population: 10000"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoTitle" />

    <TextView
        android:id="@+id/infoPopulationChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change: +12"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoPopulation" />

    <TextView
        android:id="@+id/infoWorkplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workplace Self-sufficiency: 56.4%"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoPopulationChange" />

    <TextView
        android:id="@+id/infoEmployment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employment Rate: 75.2%"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoWorkplace" />

    <TextView
        android:id="@+id/infoCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Housing Company Number: 342"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoEmployment" />

    <TextView
        android:id="@+id/infoTraffic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger Cars in Traffic: 64"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoCompany" />

    <TextView
        android:id="@+id/infoWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunny"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoTraffic" />

    <ImageView
        android:id="@+id/infoWeatherIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/sunny"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoWeather" />

    <Button
        android:id="@+id/quizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>